<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.GalleryActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="画廊效果"
        android:textSize="16sp"
        android:gravity="center_horizontal"/>

    <com.youth.banner.Banner
        android:id="@+id/banner1"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="10dp"
        app:banner_radius="5dp"
        app:banner_indicator_normal_color="@android:color/white"
        app:banner_indicator_selected_color="@color/colorPrimary"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="魅族效果"
        android:textSize="16sp"
        android:gravity="center_horizontal"/>

    <com.youth.banner.Banner
        android:id="@+id/banner2"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="10dp"
        app:banner_radius="5dp"
        app:banner_indicator_normal_color="@android:color/white"
        app:banner_indicator_selected_color="@color/colorPrimary" />

    <com.youth.banner.indicator.DrawableIndicator
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:normal_drawable="@drawable/indicator_normal"
        app:selected_drawable="@drawable/indicator_selected"/>

</LinearLayout>